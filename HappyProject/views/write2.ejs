    <p></p>

    <table class="table table-collaspe">
      <thead>
      </thead>
      <tbody>
        <form action="/write" method="post" enctype="multiplart/form-data">
          <tr>
            <th class="w-10">TITLE</th>
            <td>
              <input style="width:100%" type="text" placeholder="Title" name="title" />
            </td>
          </tr>
          <tr>
            <th class="w-10">CONTENT</th>
            <td>
              <textarea class="autosize" style="resize:none; width:100%" rows="10" placeholder="Content" name="content"></textarea>
            </td>
          </tr>
          <tr>
            <th class="w-10">FILE</th>
            <td>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <button class="btn btn-outline-secondary" type="button">Button</button>
                </div>
                <div class="custom-file">
                  <input type="file" class="custom-file-input" id="inputGroupFile03">
                  <label class="custom-file-label" for="inputGroupFile03">Choose file</label>
                </div>
              </div>
            </td>
          </tr>
          <tr>
            <td class="text-right" colspan="2">
              <input class="btn btn-dark" type="submit" value="Submit">
              <a class="btn btn-danger pull-left" href="javascript:history.back()">Back</a>
            </td>
          </tr>
        </form>
      </tbody>
